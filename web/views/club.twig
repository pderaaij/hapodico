{% extends 'base.twig' %}

{% block body %}
    <h1>Hapodico - Verzamelen van de juiste gegevens</h1>
    
    <table>
        <thead>
            <tr>
                <th>Team</th>
                <th>Poule ID</th>
                <th>Tag</th>
            </tr>
        </thead>
        <tbody>
            {% for id, team in teams %}
                <tr>
                    <td>{{ team }}</td>
                    <td>{{ id }}</td>
                    <td><pre>{hapodi id="{{id}}"}</pre></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   
    
    
    
{% endblock %}